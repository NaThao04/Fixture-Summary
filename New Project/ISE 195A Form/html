<body>
  <div class="form-section">
    <h2>Fixture Check-Out Form</h2>
    <form id="checkoutForm">
      <label for="date">Today's Date:</label><br />
      <input type="date" id="date" name="date" required /><br /><br />

      <div id="fixtureListHeader">Fixture List</div>
      <div id="fixtureList">
        <div class="fixture-row">
          <input name="partNumber[]" placeholder="Part Number" required />
          <input name="opNumber[]" placeholder="OP/Fixture Number" required />
          <button type="button" class="remove-btn" onclick="removeRow(this)">Remove</button>
        </div>
      </div>
      <br />
      <button type="button" onclick="addRow()">+ Add Row</button>
      <br /><br />
      <button type="submit">Submit</button>
    </form>
  </div>

  <script>
    function addRow() {
      const fixtureList = document.getElementById("fixtureList");
      const row = document.createElement("div");
      row.className = "fixture-row";
      row.innerHTML = `
        <input name="partNumber[]" placeholder="Part Number" required />
        <input name="opNumber[]" placeholder="OP/Fixture Number" required />
        <button type="button" class="remove-btn" onclick="removeRow(this)">Remove</button>
      `;
      fixtureList.appendChild(row);
    }

    function removeRow(btn) {
      const row = btn.parentElement;
      row.remove();
    }

    document.getElementById("checkoutForm").addEventListener("submit", function(e) {
      e.preventDefault();

      const date = document.getElementById("date").value;
      const partNumbers = Array.from(document.getElementsByName("partNumber[]"));
      const opNumbers = Array.from(document.getElementsByName("opNumber[]"));

      const data = partNumbers.map((pn, i) => ({
        date: date,
        partNumber: pn.value,
        opNumber: opNumbers[i].value
      }));

      console.log("Submitted data:", data);
      alert("Fixtures submitted! Check the console for logged data.");
    });
  </script>
</body>
